// src/pages/index.astro

// 1. Import the Sanity client that the integration configured for us.
import { sanityClient, urlFor  } from "../lib/sanityClient";
import type { PageInfo } from "../types/sanity"; // We'll create this type file next for type safety

// 2. Define the GROQ query to fetch our data.
// We ask for the one document of type "pageInfo" and select the fields we want.
const query = `*[_type == "pageInfo"][0]{ name, callname, heroTitle, bio, profileImage, socialLinks }`;

// 3. Fetch the data from Sanity using the client and the query.
// The "---" section is called the frontmatter, it runs on the server.
const pageInfo: PageInfo = await sanityClient.fetch(query);

const { name, callname,heroTitle, bio, profileImage, socialLinks } = pageInfo;

// Use .find() to get the specific link objects
const instagramLink = pageInfo.socialLinks.find(link => link.platform === 'Instagram');
const linkedInLink = pageInfo.socialLinks.find(link => link.platform.toLowerCase() === 'linkedin');
const githubLink = pageInfo.socialLinks.find(link => link.platform === 'GitHub');
